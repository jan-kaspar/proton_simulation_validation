#!/bin/bash

for period in "2016_preTS2" "2016_postTS2" "2017_preTS2" "2017_postTS2" "2018_preTS1" "2018_TS1_TS2" "2018_postTS2" "2021"
do
	echo "* $period"

	rm -rf "$period"

	mkdir "$period"
	ln -s "../settings_$period.asy" "$period/settings.asy"

	for dir in "general" "efficiency" "reco_multi_rp" "reco_single_rp" "xi_reco"
	do
		mkdir "$period/$dir"

		for file in templates/$dir/*.asy
		do
			file=${file##*/}
			ln -s "../../templates/$dir/$file" "$period/$dir/$file"
		done
	done
done
